<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.neprass.managefarm.Fragment.AddFarmerFragment">
    <co.neprass.managefarm.view.FontTextViewRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="بطاقات المزارعين"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:padding="10dp"

        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <co.neprass.managefarm.view.FontTextViewRegular
                android:id="@+id/crop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="8dp"
                android:text="الأراضي الزراعية"
                android:textColor="@color/gold"
                android:textSize="12sp"
                android:textStyle="bold"

                />

            <co.neprass.managefarm.view.FontTextViewRegular
                android:id="@+id/visit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="المحلية"
                android:textColor="@color/gold"
                android:textSize="12sp"
                android:textStyle="bold"

                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/farmListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
