<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.neprass.managefarm.Fragment.AddMainCropFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <co.neprass.managefarm.view.FontTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="البيانات الاساسية "
                    android:textColor="@color/colorAccent" />


                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="رقم القطعة * "
                    android:inputType="number"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="14sp"

                    />


                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="رقم القسيمة *"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp"

                    />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="موقع الارض"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint=" مساحة المباني لأغراض الحيارة"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint=" مساحة المباني لغير أغراض الحيارة"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="مساحة البور الدائم"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp"


                    />


                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="مساحة البور المؤقت"
                    android:inputType="number"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="14sp"


                    />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint=" مساحة الأرض المزروعة"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint=" مساحة الأشجار الحرجية"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="مساحة الأرض الاجمالية"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"

                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="البعد عن خط الهدنة"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <co.neprass.managefarm.view.FontTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نوع التعاقد  : "

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <co.neprass.managefarm.view.FontTextViewRegular
                        android:id="@+id/contracting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                        android:text="اختر... " />

                    <LinearLayout
                        android:id="@+id/contractingLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                        >

                        <ListView
                            android:id="@+id/listContracting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/colorPrimary"
                            android:dividerHeight="1dp" />
                    </LinearLayout>
                </LinearLayout>



                <co.neprass.managefarm.view.FontTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نوع المالك  : "

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <co.neprass.managefarm.view.FontTextViewRegular
                        android:id="@+id/owner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                        android:text="اختر... " />

                    <LinearLayout
                        android:id="@+id/ownerLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                        >

                        <ListView
                            android:id="@+id/listOwner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/colorPrimary"
                            android:dividerHeight="1dp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="رقم هوية المالك"
                        android:inputType="number"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />


                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="الاسم الأول"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="اسم الأب"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="اسم الجد"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="العائلة"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <co.neprass.managefarm.view.FontTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نوع المؤسسة  : "

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <co.neprass.managefarm.view.FontTextViewRegular
                            android:id="@+id/typeCompany"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                            android:text="اختر... " />

                        <LinearLayout
                            android:id="@+id/typeCompanyLinear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"

                            >

                            <ListView
                                android:id="@+id/listTypeCompany"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="@color/colorPrimary"
                                android:dividerHeight="1dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="رقم المؤسسة"
                        android:inputType="number"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />


                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="اسم المؤسسة"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="رقم هوية ممثل المؤسسة"
                        android:inputType="number"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <co.neprass.managefarm.view.FontEditTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner"
                        android:gravity="right"
                        android:hint="اسم ممثل المؤسسة"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:textSize="14sp" />


                </LinearLayout>

                <co.neprass.managefarm.view.FontTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="المحافظة  : "

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <co.neprass.managefarm.view.FontTextViewRegular
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                        android:text="اختر... " />

                    <LinearLayout
                        android:id="@+id/cityLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                        >

                        <ListView
                            android:id="@+id/listCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/colorPrimary"
                            android:dividerHeight="1dp" />
                    </LinearLayout>
                </LinearLayout>

                <co.neprass.managefarm.view.FontTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="المنطقة  : "

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <co.neprass.managefarm.view.FontTextViewRegular
                        android:id="@+id/sector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                        android:text="اختر... " />

                    <LinearLayout
                        android:id="@+id/sectorLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"

                        >

                        <ListView
                            android:id="@+id/listSector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/colorPrimary"
                            android:dividerHeight="1dp" />
                    </LinearLayout>
                </LinearLayout>

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="أقرب معلم"
                    android:paddingBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <co.neprass.managefarm.view.FontEditTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner"
                    android:gravity="right"
                    android:hint="ملاحظات "
                    android:paddingBottom="40dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"

                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/next"
                    android:layout_width="@dimen/sizeNext"
                    android:layout_height="@dimen/sizeNext"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/next3"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:rotation="180"

                    />


            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
