<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="co.neprass.managefarm.Fragment.IrrigationSourcesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <co.neprass.managefarm.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="مصادر الري : "
            android:textColor="@color/colorAccent" />

        <co.neprass.managefarm.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="التطبيق  : "

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:orientation="vertical"
            android:padding="8dp">

            <co.neprass.managefarm.view.FontTextViewRegular
                android:id="@+id/application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                android:text="اختر... " />

            <LinearLayout
                android:id="@+id/applicationLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                >

                <ListView
                    android:id="@+id/listApplication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/colorPrimary"
                    android:dividerHeight="1dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upTank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <co.neprass.managefarm.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:gravity="right"
                android:hint="السعة"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"

                />

            <co.neprass.managefarm.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:gravity="right"
                android:hint="الارتفاع"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/will"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <co.neprass.managefarm.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:gravity="right"
                android:hint="رقم البئر "
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"

                />

            <co.neprass.managefarm.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:gravity="right"
                android:hint="عمق البئر بالمتر"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"

                />

            <co.neprass.managefarm.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:gravity="right"
                android:hint="قوة دفع الحصان"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"

                />
            <co.neprass.managefarm.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:gravity="right"
                android:hint="الكهرباء(3/1.5 فاز)"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groundWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <co.neprass.managefarm.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:gravity="right"
                android:hint="العمق"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"

                />
            <co.neprass.managefarm.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:gravity="right"
                android:hint="السعة التخزينة"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"

                />
            <co.neprass.managefarm.view.FontTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نوع البركة  : "

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner"
                android:orientation="vertical"
                android:padding="8dp">

                <co.neprass.managefarm.view.FontTextViewRegular
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                    android:text="اختر... " />

                <LinearLayout
                    android:id="@+id/typeLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    >

                    <ListView
                        android:id="@+id/listType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/colorPrimary"
                        android:dividerHeight="1dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="@dimen/sizeNext"
            android:layout_height="@dimen/sizeNext"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@drawable/next3"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:rotation="180"


            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
