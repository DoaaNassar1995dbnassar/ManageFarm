<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="co.neprass.managefarm.Fragment.WorkerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <co.neprass.managefarm.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="القوى العاملة"
            android:textColor="@color/colorAccent"

            />

        <co.neprass.managefarm.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="القوى العاملة المؤقتة"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:textSize="13sp"

            />


        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="عدد الذكور"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"

            android:textSize="14sp" />

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="عدد الذكور من الأسرة"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"

            android:textSize="14sp" />


        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="عدد الإناث"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"

            android:textSize="14sp" />

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="عدد الإناث من الأسرة"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"

            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />

        <co.neprass.managefarm.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="القوى العاملةالدائمة"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"
            />

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="رقم الهوية"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"

            android:textSize="14sp" />

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="الاسم الأول"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp"

            />

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="الاسم الأب"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="الاسم الجد"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="العائلة"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <co.neprass.managefarm.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="الجنس  : "
            android:textColor="@color/black"
            android:textSize="14sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:orientation="vertical"
            android:padding="8dp">

            <co.neprass.managefarm.view.FontTextViewRegular
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_drop_down_black_24dp"
                android:hint="اختر... "
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/sexLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                >

                <ListView
                    android:id="@+id/listSEX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="1dp"
                    android:divider="@color/colorPrimary"
                    />
            </LinearLayout>


        </LinearLayout>

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="رقم الجوال"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <co.neprass.managefarm.view.FontEditTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner"
            android:hint="العنوان"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"

            >

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <co.neprass.managefarm.view.FontTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:hint="من الأسرة ؟ "
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="@dimen/sizeNext"
            android:layout_height="@dimen/sizeNext"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@drawable/next3"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:rotation="180"


            />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
